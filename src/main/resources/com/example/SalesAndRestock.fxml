<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.SalesAndRestockController">

    <center>
        <VBox spacing="10" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
            <children>

                <TableView fx:id="table" prefHeight="420.0">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
                        <TableColumn fx:id="colName" prefWidth="220.0" text="Item" />
                        <TableColumn fx:id="colQty" prefWidth="80.0" text="Qty" />
                        <TableColumn fx:id="colMinQty" prefWidth="90.0" text="Min Qty" />
                        <TableColumn fx:id="colFullQty" prefWidth="90.0" text="Full Qty" />
                        <TableColumn fx:id="colUnit" prefWidth="80.0" text="Unit" />
                        <TableColumn fx:id="colOrderToFull" prefWidth="120.0" text="Order to Full" />
                    </columns>
                </TableView>

                <HBox spacing="10">
                    <children>
                        <Button fx:id="btnRefresh" text="Refresh" />
                        <Button fx:id="btnRestockOne" text="Restock Selected" />
                        <Button fx:id="btnRestockAll" text="Restock All" />
                    </children>
                </HBox>

            </children>
        </VBox>
    </center>
   
   <left>
      <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="beginHourField" promptText="insert begin hour (ex: 11)" />
            <TextField fx:id="endHourField" promptText="insert end hour (ex: 22)">
               <StackPane.margin>
                  <Insets bottom="-60.0" />
               </StackPane.margin>
            </TextField>
            <Button fx:id="makeSalesReport" mnemonicParsing="false" onAction="#initialize" text="Make Sales Report">
               <StackPane.margin>
                  <Insets bottom="-200.0" />
               </StackPane.margin>
            </Button>
         </children>
      </StackPane>
   </left>

</BorderPane>
